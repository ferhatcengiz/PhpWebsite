{% extends 'adminbase.html.twig' %}

{% block title %}Mesaj Listesi {% endblock %}

{% block content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title ">Products</h4> </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                    <ol class="breadcrumb">
                        <li><a href="{{ url('admin') }}">Anamenü</a></li>
                        <li class="active"><a href="{{ path('admin_product_index') }}">Products</a></li>
                    </ol>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            {{ include('admin/massages.html.twig') }}
            <div class="row">
                <div class="col-sm-12">
                    <div class="white-box">
                        <h3 class="box-title">Product Listesi</h3>

                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Comment</th>
                                    <th>Status</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for massage in massages %}
                                    <tr>
                                        <td>{{ massage.id }}</td>
                                        <td>{{ massage.name }}</td>
                                        <td>{{ massage.email }}</td>
                                        <td>{{ massage.subject }}</td>
                                        <td>{{ massage.message }}</td>
                                        <td>{{ massage.comment }}</td>
                                        <td>{{ massage.status }}</td>
                                        <td>
                                            <a href="javascript:openWin('{{ path('admin_massages_show', {'id': massage.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');" class="btn btn-block btn-googleplus">
                                            Göster
                                            </a>

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                            <a href="{{ path('admin_massages_new') }}">Create new</a>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer text-center">~~~~~~~~~~ </footer>
    </div>
{% endblock %}