<div class="row">
    <form class="form-horizontal" method="post">
        {{ include('admin/massages.html.twig') }}
        <div class="box-body">
            <div class="col-md-12">
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1" data-toggle="tab">Genel Bilgiler</a></li>
                        <li><a href="#tab_2" data-toggle="tab">Email Server</a></li>
                        <li><a href="#tab_3" data-toggle="tab">Hakkımızda</a></li>
                        <li><a href="#tab_4" data-toggle="tab">İletişim</a></li>
                        <li><a href="#tab_5" data-toggle="tab">Referanslar</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Adı</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[title]" value="{{ setting.title }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Kısa Açıklama</label>

                                <div class="col-sm-8">
                                    <input type="text" name="setting[description]" value="{{ setting.description }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Anahtar Kelimeler</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[keywords]" value="{{ setting.keywords }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Firma Adı</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[company]" value="{{ setting.company }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Adresi</label>

                                <div class="col-sm-8">
                                    <input type="text" name="setting[address]" value="{{ setting.address }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Fax</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[fax]" value="{{ setting.fax }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Durum</label>
                                <div class="col-sm-2">
                                    <select name="setting[status]" class="form-control" value="{{ setting.status }}">
                                        <option>True</option>
                                        <option selected>False</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_2">

                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Email Server</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[smtpserver]" value="{{ setting.smtpserver }}" class="form-control"  placeholder="title">
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Email</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[smtpemail]" value="{{ setting.smtpemail }}" class="form-control"  placeholder="title">
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-sm-1 control-label">Email Şifre :</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[smtppassword]" value="{{ setting.smtppassword }}" class="form-control"  placeholder="title">
                                </div>
                            </div>

                            <div class="form-group">
                                <label  class="col-sm-1 control-label">SMTP Port :</label>
                                <div class="col-sm-8">
                                    <input type="text" name="setting[smtpport]" value="{{ setting.smtpport }}" class="form-control"  placeholder="title">
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_3">
                            <div class="form-group">
                                <label  class="control-label"></label>
                                <div class="col-sm-12">
                                    <textarea id="aboutus" name="setting[aboutus]">{{ setting.aboutus }}</textarea>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_4">
                            <div class="form-group">
                                <label  class="control-label"></label>
                                <div class="col-sm-12">
                                    <textarea id="contact" name="setting[contactus]">{{ setting.contact }}</textarea>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="tab_5">
                            <div class="form-group">
                                <label  class="control-label"></label>
                                <div class="col-sm-12">
                                    <textarea id="referances" name="setting[referances]">{{ setting.referances }}</textarea>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- nav-tabs-custom -->
            </div>
            <button type="submit" class="btn btn-info pull-right" >KAYDET</button>

            <div class="box-footer">
            </div>
        </div>
    </form>
</div>
<script>
    ClassicEditor
        .create( document.querySelector( '#aboutus' ) )
        .catch( error => {
            console.error( error );
        } );
</script>

<script>
    ClassicEditor
        .create( document.querySelector( '#contact' ) )
        .catch( error => {
            console.error( error );
        } );
</script>

<script>
    ClassicEditor
        .create( document.querySelector( '#referances' ) )
        .catch( error => {
            console.error( error );
        } );
</script>





