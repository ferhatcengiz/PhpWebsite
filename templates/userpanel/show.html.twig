{% extends 'frontbase.html.twig' %}

{% block title %}Profil bilgileri{% endblock %}
{% block sidebar %}{{ include('home/_usersidebar.html.twig') }} {% endblock %}

{% block content %}
    <h1>Profil Bilgilerim</h1>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ app.user.roles|join }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ app.user.name }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ app.user.address }}</td>
            </tr>
            <tr>
                <th>Åžehir</th>
                <td>{{ app.user.city }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ app.user.phone }}</td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
